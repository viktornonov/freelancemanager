/*@author Viktor Nonov*/

body {
	background: #414141 url(images/back.jpg) repeat-x;
	font-family: Verdana, Arial;
	font-size: 1em;
}

/*
div {
	display: inline;
	float: left;
	overflow: hidden;
}
*/
#container {
	float: none;
	display: block;
	overflow: hidden;
	width: 960px;
	margin-left: auto;
	margin-right: auto;
}

#navbar {
	margin-top: 89px;
	width: 712px;
	height: 43px;
	font-size: 1.1em;
	font-weight: bold;
	color: #fff;
	list-style: none;
}

#navbar li {
	width: 110px;
	height: 43px;
	float: left;
	text-align: center;
	line-height: 43px;
}

#navbar li a {
	display: block;
	width: 100%;
	height: 100%;
	color: #fff;
	text-decoration: none;
}

#navbar li a:hover {
	text-decoration: underline;
}

#navbar #selected {
	background: url(images/tab-act.jpg) no-repeat;
}

#navbar #selected  a{
	color: #000;
}

#content {
	width: 712px;
	background: url(images/content.jpg) repeat-y;
	float: left;
}

#content .in {
	padding: 10px;
}

#content-bottom {
	width: 712px;
	height: 17px;
	background: url(images/content-bottom.jpg) no-repeat;
}

.controls-buts {
	background: url(images/control-top.jpg) no-repeat top left;
	width: 236px;
	float: right;
	margin-top: 16px;
}

.controls-body {
	margin-top: 8px;
	background: url(images/control-center.jpg) repeat-y;
	width: 100%;
}

.controls-body p{
	font-size: 0.7em;
	margin-left: 10px;
	margin-right: 10px;
}

.controls-bottom {
	background: url(images/control-bottom.jpg) no-repeat;
	width: 100%;
	height: 12px;
}

#rightBar {
	width: 244px;
	margin-top: 10px;
	float: left;
}

.sidebar, .sidebar-center, .sidebar-bottom, 
.tit-head, .tit-left, .tit-right{
	float: left;
	overflow: hidden;
	display: inline;	
}

.sidebar {
	background: url(images/sidebar-top.jpg) no-repeat top left;
	width: 244px;
}

.sidebar-center {
	margin-top: 4px;
	text-align: center;
	background: url(images/sidebar-center.jpg) repeat-y;
	width: 100%;
}

.sidebar-bottom {
	width: 100%;
	height: 11px;
	background: url(images/sidebar-bottom.jpg) no-repeat;
}

.tit-head {
	margin-left: 7px;
	height: 27px;
	line-height: 27px;
	background: url(images/tit-center.jpg) repeat-x;
	width: 224px;
	color: #fff;
	font-weight: bold;
	font-size: 1.1em;
}

.tit-left {
	width: 6px;
	height: 100%;
	background: url(images/tit-left.jpg) no-repeat;
}

.tit-right {
	width: 4px;
	height: 100%;
	float: right;
	background: url(images/tit-right.jpg) no-repeat;
}

.contactsTable {
	width: 100%;
}

.contactsTable tr{
		border-bottom: 1px gray solid;
		height: 50px;
		line-height: 50px;
		font-size: 12px;
		font-family: Arial;
		text-align: center;
}

.altrow {
	background-color: #7fccea;	
}

td.actions {
	width: 100px;
}

td.actions span {
	padding: 4px 0;
}

td.actions span a {
	display: block;
		
}

td.actions a{
	float: left;
}

.contacts .submitDecoration {
	width: 100%;
}